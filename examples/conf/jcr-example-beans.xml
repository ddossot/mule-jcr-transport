<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	
	<bean id="jcrRepository" class="org.apache.jackrabbit.core.TransientRepository" destroy-method="shutdown"/>
	
	<bean id="contentGenerator" class="org.mule.examples.jcr.JcrContentLoader" init-method="initialize">
		<property name="repository">
			<ref bean="jcrRepository" />
		</property>
		<property name="username">
			<value>admin</value>
		</property>
		<property name="password">
			<value>admin</value>
		</property>
		<property name="rootNodeName">
			<value>example</value>
		</property>
	</bean>
</beans>

